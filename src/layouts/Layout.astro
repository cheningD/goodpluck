---
import Header from "@components/solid/global/Header";
import Footer from "@components/solid/global/Footer";
import { getOrCreateGuestCart } from "src/lib/swell/cart";
import CartFlyout from "@components/solid/CartFlyout.tsx";
import Banner from "@components/solid/Banner";
import Breadcrumb from "@components/solid/Breadcrumb";
import SidebarMenu from "@components/solid/global/SidebarMenu";
import "@assets/styles/global.css";
import favicon from "@assets/img/favicon.png";

const { title, categories, currentCollection } = Astro.props;

let cart = null;

try {
  cart = await getOrCreateGuestCart();
} catch (error) {
  console.log(error);
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href={favicon.src} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Goodpluck</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Banner isZipDeliverable={!!cart?.shipping?.zip} client:load />
    <Header collections={categories} client:load />
    <CartFlyout basket={cart} client:load />
    <main
      id="sidebar-page"
      class="relative w-full min-h-[calc(100vh_-_468px)] flex flex-col max-w-7xl mx-auto"
    >
      <div class="grid grid-cols-5">
        {
          currentCollection && (
            <SidebarMenu
              categories={categories}
              categorySlug={currentCollection.slug}
              client:only
            />
          )
        }
        {!currentCollection && <div />}

        <div
          class={`col-span-5 ${currentCollection ? "md:col-span-4" : ""} px-4`}
        >
          {
            currentCollection && (
              <Breadcrumb
                categories={categories}
                collectionId={currentCollection.id}
              />
            )
          }
          <slot />
        </div>
      </div>
    </main>
    <Footer client:load />
  </body>
</html>
