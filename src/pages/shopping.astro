---
import Layout from "@layouts/MainLayout.astro";
import Category from "@components/solid/Category.tsx";
import swell from "../lib/swell.ts";

const categories = await swell.categories.list({
  limit: 100,
  page: 1,
});
---

<Layout
  title="Shopping page"
  description="Fun, fresh fruit & veg boxes delivered to your door for up to 30% less than the supermarkets. Fight food waste & support Aussie farmers with Farmers Pick."
categories={categories.results} title="Shopping page">
  <Category collections={categories.results} />
</Layout>