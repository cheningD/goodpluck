---
import Layout from "../layouts/Layout.astro";

const url = new URL(Astro.request.url);
let zipcode = url.searchParams.get("zipcode");
---

<Layout>
  <div class="flex items-center justify-center h-screen bg-gray-100">
    <div class="bg-white p-8 rounded shadow-md w-full max-w-sm">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">
        Unfortunately, we don't deliver to {zipcode} yet!
      </h2>
      <p class="mb-6 text-gray-600">
        Add your email to our waitlist to be notified when Goodpluck is
        available in your community.
      </p>
      <form method="POST">
        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
          Your email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Email"
          required
          class="border rounded-md p-2 w-full mb-4"
        />
        <button
          class="bg-blue-500 text-white rounded-md p-2 w-full mb-2 hover:bg-blue-600"
        >
          Join Waitlist
        </button>
      </form>
    </div>
  </div>
</Layout>
