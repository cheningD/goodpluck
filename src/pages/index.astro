---
import Banner from "../components/solid/Banner.tsx";
import Cart from "../components/solid/Cart.tsx";
import Menu from "../components/solid/Menu";
import MobileNav from "../components/solid/MobileNav.tsx";
import { getStytchClient } from "../lib/stytch";

const runtime = Astro.locals.runtime;
const { STYTCH_PROJECT_ID, STYTCH_PROJECT_SECRET } =
  runtime?.env || import.meta.env;

let loggedin = null;
const session_token = Astro.cookies.get("gp_session_token")?.value;
if (session_token) {
  try {
    const stytchclient = getStytchClient(
      STYTCH_PROJECT_ID,
      STYTCH_PROJECT_SECRET,
    );
    const resp = await stytchclient.sessions.authenticate({
      session_token,
    });
    if (resp.status_code === 200) {
      loggedin = true;
    }
  } catch (err) {
    loggedin = false;
    console.log("err", err);
  }
}
const message = Astro.url.searchParams.get("message")! || "";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Goodpluck</title>
  </head>
  <body>
    <div class="sticky top-0 h-full">
      <Banner client:load />
      <MobileNav client:load />
    </div>
    <Cart client:load />
    <Menu client:load />
  </body>
  <h1>Homepage</h1>
  <p>Logged in: {JSON.stringify(loggedin)}</p>
  <p>{message}</p>
</html>
