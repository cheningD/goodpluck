{
  "extends": "astro/tsconfigs/strictest",
  "module": "es2020",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "paths": {
      "@composables/*": ["src/composables/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["dist", "tests", "vitest.config.ts"]
}
